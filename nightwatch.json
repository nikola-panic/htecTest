{
  "src_folders": [
    "test"
  ],
  "output_folder": "reports",
  "page_objects_path": [
    "page"
  ],
  "selenium": {
    "start_process": true,
    "server_path": "./driver/selenium-server-standalone-3.11.0.jar",
    "port": 4444,
    "cli_args": {
      "webdriver.chrome.driver": "./driver/chromedriver.exe"
    }
  },
  "test_settings": {
    "default": {
      "selenium_port": 4444,
      "selenium_host": "localhost",
      "silent": true,
      "desiredCapabilities": {
        "browserName": "chrome",
        "chromeOptions": {
          "args": [
            "start-maximized"
          ]
        }
      }
    }
  }
}